{
  "name": "obsidian-plugin-abbrlink",
  "version": "1.2.1",
  "description": "An Obsidian plugin to generate permanent links for markdown files",
  "main": "dist/main.js",
  "type": "module",
  "scripts": {
    "build": "rolldown -c rolldown.config.js",
    "lint": "biome check && biome lint ",
    "lint-fix": "biome format --write && biome lint --write",
    "bump": "node version-bump.mjs"
  },
  "files": [
    "dist"
  ],
  "keywords": [
    "obsidian",
    "obsidian-plugin",
    "markdown",
    "permalink",
    "abbrlink"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/Hoshino-Yumetsuki/obsidian-plugin-abbrlink"
  },
  "license": "MIT",
  "devDependencies": {
    "@biomejs/biome": "^2.2.4",
    "@types/node": "^24.5.2",
    "obsidian": "^1.8.7",
    "rolldown": "1.0.0-beta.40",
    "typescript": "^5.9.2"
  }
}
